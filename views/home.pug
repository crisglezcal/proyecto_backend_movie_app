doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/css/style.css")
        title Document
        
    body
        include ./header.pug

        main
            
            h1 Buscador
            input#productName(type="text")
            button#searchButton Buscar
            #result
            
            h1 Aquí tienes #{msj}

            section
                each product in products
                    article
                        h1 Sección productos 
                        p Título: #{product.title}
                        p Descripción: #{product.description}
                        p Precio: #{product.price}
                        img(src=product.image, alt=product.title class="img_logo")
        include ./footer.pug
        script(src="/js/script.js")